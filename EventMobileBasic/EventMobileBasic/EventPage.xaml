<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EventMobileBasic.EventPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Titre"/>
            <Entry Text="{Binding Title}" Placeholder="Titre de l'évènement"/>
            <Label Text="Description"/>
            <Editor HeightRequest="50" Text="{Binding Description}" Placeholder="Description de l'évènement"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>